<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coroutine.tictactoe">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app_name"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_name_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicTacToe">
        <activity
            android:screenOrientation="portrait"
            android:name="com.coroutine.tictactoe.ui.ChooseComputerLevel"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.coroutine.tictactoe.ui.PlayWithComputerHard"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.coroutine.tictactoe.ui.ComputerGameBoard"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.coroutine.tictactoe.ui.ChooseGameType"
            android:exported="true" />
        <activity
            android:screenOrientation="portrait"
            android:name="com.coroutine.tictactoe.ui.PlayWithComputerGetName"
            android:exported="true" />
        <activity android:name="com.coroutine.tictactoe.ui.GameBoard"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.coroutine.tictactoe.ui.GetUserNames"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.coroutine.tictactoe.ui.MainActivity"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>